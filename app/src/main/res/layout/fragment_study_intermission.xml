<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_task_beginning"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_task_desc"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_margin="@dimen/margin_between_elements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Starten Sie die Navigation zu XYZ."/>

        <Button
            android:id="@+id/button_start_task"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_between_elements"
            android:text="@string/button_start_task" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_300_dark"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_weight="1"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_margin="@dimen/margin_between_elements"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_baseline_check_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_between_elements"
            android:gravity="center"
            android:text="@string/study_task_complete"
            android:textSize="32sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_between_elements"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_upload"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_between_elements"
                android:layout_weight="1"
                android:text="@string/button_upload" />

            <ImageView
                android:id="@+id/image_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_between_elements"
                android:layout_weight="1"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_baseline_check_24" />

        </LinearLayout>

        <Button
            android:id="@+id/button_back"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_between_elements"
            android:text="@string/button_back_to_study_overview" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>