<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/text_view_item_number"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding"
        android:paddingBottom="@dimen/padding"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_view_duration"
        tools:text = "1" />

    <TextView
        android:id="@+id/text_view_duration"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="@dimen/padding"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/text_view_item_number"
        app:layout_constraintEnd_toStartOf="@id/image_view_difficulty"
        app:layout_constraintHorizontal_weight="1"
        tools:text="42 Minuten"/>

    <ImageView
        android:id="@+id/image_view_difficulty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="@dimen/padding"
        android:contentDescription="@string/difficulty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_view_duration"
        app:layout_constraintHorizontal_weight="1"
        tools:src="@drawable/ic_difficulty_5"/>

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_marginTop="@dimen/margin_between_elements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>